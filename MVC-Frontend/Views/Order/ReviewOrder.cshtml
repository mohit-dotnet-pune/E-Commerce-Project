@model List<MVC_Frontend.Models.OrderItem>

<h2>Review Order</h2>

<form method="post" asp-action="PlaceOrder">

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Product</th>
                <th>Qty</th>
                <th>Price</th>
                <th>Total</th>
            </tr>
        </thead>

        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>@Model[i].ProductName</td>
                    <td>@Model[i].ProductQuantity</td>
                    <td>@Model[i].ProductPrice</td>
                    <td>@(Model[i].ProductPrice * Model[i].ProductQuantity)</td>

                    <input type="hidden" name="Items[@i].ProductId" value="@Model[i].ProductId" />
                    <input type="hidden" name="Items[@i].ProductName" value="@Model[i].ProductName" />
                    <input type="hidden" name="Items[@i].ProductQuantity" value="@Model[i].ProductQuantity" />
                    <input type="hidden" name="Items[@i].ProductPrice" value="@Model[i].ProductPrice" />
                </tr>
            }
        </tbody>
    </table>

    <div class="mb-3">
        <label class="form-label">Customer ID</label>
        <input type="number" class="form-control" name="CustomerId" required />
    </div>

    <button class="btn btn-success" type="submit">Place Order</button>
</form>
