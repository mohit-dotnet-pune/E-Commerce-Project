@model List<Product>

<h2>Products</h2>

<a class="btn btn-primary" href="/Product/Create">Create New</a>

<table class="table table-bordered mt-3">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Description</th>
        <th>Price</th>
        <th>Category</th>
        <th>Actions</th>
    </tr>

    @foreach (var p in Model)
    {
        <tr>
            <td>@p.ProductId</td>
            <td>@p.ProductName</td>
            <td>@p.ProductDescription</td>
            <td>@p.ProductPrice</td>
            <td>@p.CategoryId</td>
            <td>
                <a class="btn btn-warning" href="/Product/Edit/@p.ProductId">Edit</a>
                <a class="btn btn-success" href="/Product/Details/@p.ProductId">Details</a>
                <a class="btn btn-danger" href="/Product/Delete/@p.ProductId">Delete</a>
            </td>
        </tr>
    }
</table>
