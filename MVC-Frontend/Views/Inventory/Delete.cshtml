@model MVC_Frontend.Models.Inventory

@{
    ViewData["Title"] = "Delete Inventory";
}

<h2>Delete Inventory</h2>

<div class="alert alert-danger">
    Are you sure you want to delete this inventory record?
</div>

<div class="card p-3">
    <p><strong>Inventory ID:</strong> @Model.InventoryId</p>
    <p><strong>Product ID:</strong> @Model.ProductId</p>
    <p><strong>Quantity:</strong> @Model.StockQuantity</p>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="InventoryId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a class="btn btn-secondary" href="/Inventory/Index">Back</a>
</form>
