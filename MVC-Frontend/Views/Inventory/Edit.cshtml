@model MVC_Frontend.Models.Inventory

@{
    ViewData["Title"] = "Edit Inventory";
}

<h2>Edit Inventory</h2>

<form asp-action="Edit" method="post">

    <input type="hidden" asp-for="InventoryId" />

    <div class="form-group">
        <label>Product Id</label>
        <input asp-for="ProductId" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label>Quantity</label>
        <input asp-for="StockQuantity" class="form-control" />
    </div>

    <br />

    <button type="submit" class="btn btn-primary">Update</button>
    <a class="btn btn-secondary" href="/Inventory/Index">Back</a>
</form>
